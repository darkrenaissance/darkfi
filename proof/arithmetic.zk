k = 13;
field = "pallas";

constant "Arith" {}

witness "Arith" {
    Base a,
    Base b,
}

circuit "Arith" {
    sum = base_add(a, b);
    constrain_instance(sum);

    product = base_mul(a, b);
    constrain_instance(product);

    difference = base_sub(a, b);
    constrain_instance(difference);
}
